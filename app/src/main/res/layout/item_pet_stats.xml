<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/stat_card"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/space"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/bg_stat_card"
            android:layout_width="160dp"
            android:layout_height="94dp"
            android:background="@drawable/stat_container"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/prompt_stat_card"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="Total Journal Entries Written: [temp]"
            android:textColor="#000000"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="@+id/bg_stat_card"
            app:layout_constraintEnd_toEndOf="@+id/bg_stat_card"
            app:layout_constraintStart_toStartOf="@+id/bg_stat_card"
            app:layout_constraintTop_toTopOf="@+id/bg_stat_card" />

        <TextView
            android:id="@+id/ans_stat_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="[temp]"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="@id/bg_stat_card"
            app:layout_constraintStart_toStartOf="@id/bg_stat_card"
            app:layout_constraintTop_toBottomOf="@id/bg_stat_card" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/stat_card_2"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/space"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/bg_stat_card_2"
            android:layout_width="160dp"
            android:layout_height="94dp"
            android:background="@drawable/stat_container"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/prompt_stat_card_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="Total Tasks Completed: [temp]"
            android:textColor="#000000"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="@+id/bg_stat_card_2"
            app:layout_constraintEnd_toEndOf="@+id/bg_stat_card_2"
            app:layout_constraintStart_toStartOf="@+id/bg_stat_card_2"
            app:layout_constraintTop_toTopOf="@+id/bg_stat_card_2" />

        <TextView
            android:id="@+id/ans_stat_card_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="[temp]"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="@id/bg_stat_card_2"
            app:layout_constraintStart_toStartOf="@id/bg_stat_card_2"
            app:layout_constraintTop_toBottomOf="@id/bg_stat_card_2" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Space
        android:id="@+id/space"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>